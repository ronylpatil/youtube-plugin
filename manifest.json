{
  "manifest_version": 3,
  "name": "youtube comment analyser",
  "version": "3.1",
  "description": "Offers automatically updating stats as you navigate through YouTube comments.",
  "author" : "ronylpatil",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab"]
}
